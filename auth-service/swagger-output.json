{
  "swagger": "2.0",
  "info": {
    "title": "Auth Service API",
    "description": "Serviço de Autenticação e Gestão de Utilizadores",
    "version": "1.0.0"
  },
  "host": "localhost:3001",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "securityDefinitions": {
    "bearerAuth": {
      "type": "apiKey",
      "name": "Authorization",
      "scheme": "bearer",
      "in": "header"
    }
  },
  "paths": {
    "/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Autenticar utilizador",
        "description": "",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/LoginRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Registar novo utilizador",
        "description": "",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/RegisterRequest"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      }
    },
    "/auth/me": {
      "get": {
        "tags": [
          "User Profile"
        ],
        "summary": "Obter dados do meu perfil",
        "description": "",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "patch": {
        "tags": [
          "User Profile"
        ],
        "summary": "Atualizar dados do meu perfil",
        "description": "",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "obj",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/UpdateMeRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/auth/": {
      "get": {
        "tags": [
          "Admin"
        ],
        "summary": "Listar todos os utilizadores",
        "description": "",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "tipo",
            "in": "query",
            "type": "string"
          },
          {
            "name": "isBanned",
            "in": "query",
            "type": "string"
          },
          {
            "name": "limit",
            "in": "query",
            "type": "string"
          },
          {
            "name": "page",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/auth/{userID}": {
      "patch": {
        "tags": [
          "Admin"
        ],
        "summary": "Banir/Desbanir utilizador",
        "description": "",
        "parameters": [
          {
            "name": "userID",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "obj",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/BanRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/auth/{userID}/promote": {
      "patch": {
        "tags": [
          "Admin"
        ],
        "summary": "Promover utilizador a Administrador",
        "description": "",
        "parameters": [
          {
            "name": "userID",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    }
  },
  "definitions": {
    "LoginRequest": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "example": "tiago@mail.com"
        },
        "password": {
          "type": "string",
          "example": "123"
        }
      }
    },
    "RegisterRequest": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string",
          "example": "Tiago"
        },
        "email": {
          "type": "string",
          "example": "tiago@mail.com"
        },
        "password": {
          "type": "string",
          "example": "123"
        },
        "tipo": {
          "type": "string",
          "example": "estudante"
        }
      }
    },
    "UpdateMeRequest": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string",
          "example": "Tiago Novo Nome"
        },
        "email": {
          "type": "string",
          "example": "novo@mail.com"
        }
      }
    },
    "BanRequest": {
      "type": "object",
      "properties": {
        "isBanned": {
          "type": "boolean",
          "example": true
        }
      }
    }
  }
}