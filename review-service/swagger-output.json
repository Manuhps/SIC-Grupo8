{
  "swagger": "2.0",
  "info": {
    "title": "Review Service API",
    "description": "Sistema de Avaliações (Alojamentos e Eventos) - Grupo 8",
    "version": "1.0.0"
  },
  "host": "localhost:3005",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "securityDefinitions": {
    "bearerAuth": {
      "type": "apiKey",
      "name": "Authorization",
      "scheme": "bearer",
      "in": "header"
    }
  },
  "paths": {
    "/reviews/{id}": {
      "get": {
        "tags": [
          "Reviews"
        ],
        "description": "Obtém detalhes de uma avaliação específica.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "Reviews"
        ],
        "description": "Apaga uma avaliação permanentemente (Acesso Admin).",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/reviews/alojamento/{alojamentoId}": {
      "get": {
        "tags": [
          "Reviews"
        ],
        "description": "Lista todas as avaliações de um alojamento.",
        "parameters": [
          {
            "name": "alojamentoId",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "page",
            "in": "query",
            "type": "string"
          },
          {
            "name": "limit",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": [
          "Reviews"
        ],
        "description": "",
        "parameters": [
          {
            "name": "alojamentoId",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "obj",
            "in": "body",
            "description": "Dados da avaliação do alojamento",
            "schema": {
              "$ref": "#/definitions/ReviewAlojamento"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/reviews/evento/{eventoId}": {
      "get": {
        "tags": [
          "Reviews"
        ],
        "description": "Lista todas as avaliações de um evento.",
        "parameters": [
          {
            "name": "eventoId",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "page",
            "in": "query",
            "type": "string"
          },
          {
            "name": "limit",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": [
          "Reviews"
        ],
        "description": "",
        "parameters": [
          {
            "name": "eventoId",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "obj",
            "in": "body",
            "description": "Dados da avaliação do evento",
            "schema": {
              "$ref": "#/definitions/ReviewEvento"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/reviews/": {
      "get": {
        "tags": [
          "Reviews"
        ],
        "description": "Lista todas as avaliações do sistema (Acesso Admin).",
        "parameters": [
          {
            "name": "tipo",
            "in": "query",
            "type": "string"
          },
          {
            "name": "page",
            "in": "query",
            "type": "string"
          },
          {
            "name": "limit",
            "in": "query",
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    }
  },
  "definitions": {
    "ReviewAlojamento": {
      "type": "object",
      "properties": {
        "alojamento_id": {
          "type": "number",
          "example": 1
        },
        "pontuacao": {
          "type": "number",
          "example": 5
        },
        "comentario": {
          "type": "string",
          "example": "Estadia fantástica, muito limpo!"
        }
      }
    },
    "ReviewEvento": {
      "type": "object",
      "properties": {
        "evento_id": {
          "type": "number",
          "example": 1
        },
        "pontuacao": {
          "type": "number",
          "example": 4
        },
        "comentario": {
          "type": "string",
          "example": "Evento muito bem organizado."
        }
      }
    }
  }
}